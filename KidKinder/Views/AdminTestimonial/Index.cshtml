@model List<KidKinder.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5> Referanslar Listesi Tablosu</h5>
                        <span>Referans ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Resim</th>
                                        <th>Ad Soyad</th>
                                        <th>Başlık</th>
                                        <th>Yorum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <th>@item.TestimonialId</th>
                                            <th><img src="@item.ImageUrl" /></th>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>

                                            <td><a href="/AdminTestimonial//DeleteTestimonial//@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminTestimonial//UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminTestimonial/CreateTestimonial/" class="btn btn-primary">Yeni Servis Kayıdı</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

