@model List<KidKinder.Entities.Communication>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>İletim Bilgiler Listesi Tablosu</h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Açıklama</th>
                                        <th>Adress</th>
                                        <th>Mail</th>
                                        <th>Telefon No</th>
                                        <th>Sil</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.CommunicationId</th>
                                            <td>@item.Description</td>
                                            <td>@item.Address</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td><a href="/AdminComunication/DeleteComunication/@item.CommunicationId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminComunication/UpdateComunication/@item.CommunicationId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminComunication/CreateComunication/" class="btn btn-primary">Yeni Kayıt</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

