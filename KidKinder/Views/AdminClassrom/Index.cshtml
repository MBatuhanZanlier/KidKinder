@model List<KidKinder.Entities.ClassRoom>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi Tablosu</h5>
                        <span>Öğretmenler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Branş</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.Description</td>
                                            <td>@item.AgeOfKids</td>
                                            <td>@item.TotalSeat</td>
                                            <td>@item.ClassTime</td>
                                            <td>@item.Price</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@item.Branch.Name</td>
                                            <td><a href="/AdminClassrom/DeleteClassroom/@item.ClassRoomId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminClassrom/UpdateClassroom/@item.ClassRoomId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminClassrom/CreateClassroom/" class="btn btn-primary">Yeni Sınıf Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

