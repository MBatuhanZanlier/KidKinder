@model KidKinder.Entities.Contact
@{
    ViewBag.Title = "DetailMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">

    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">
                <div class="card">
                    <div class="card-header">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Gelen Mesajlar </h5>
                                        <span>Mesaj Tarihi <code>@Model.SenDate.ToShortDateString()</code></span>
                                    </div>
                                    <div class="card-block">
                                        <h4 class="sub-title">Mesajlarım</h4>
                                        <form>

                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label">Ad Soyad:</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" placeholder="@Model.NameSurname" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label">Email:</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" placeholder="@Model.Email" readonly>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label">Mesaj:</label>
                                                <div class="col-sm-10">
                                                    <textarea rows="5" cols="5" class="form-control" placeholder="@Model.Message" readonly></textarea>


                                                </div>
                                            </div>
                                        </form>
                                        <a href="/AdminContact/Index" class="btn btn-outline-primary">Geri dön</a>

                                           <a href="/AdminContact/DeleteContact/@Model.ContactId" class="btn btn-outline-danger">Sil</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
